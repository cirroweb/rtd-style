@mixin visualize-mediaquery() {
    body.viz-mq:before {
        content: '';
        position:fixed;
        width: 100%;
        border-top: 8px none rgba(255, 0, 0, 0.5);
        z-index: 980;
        @include respond-to($break-s) {
            border-top-style: dotted;
        }
        @include respond-to($break-m) {
            border-top-style: dashed;
        }
        @include respond-to($break-l) {
            border-top-style: solid;
        }
    }
}
@include visualize-mediaquery;

@mixin visualize-layout() {
    body.viz-layout {

        .content {
            &:before {
                content: '.content (default layout)';
                color: #105B63;
                font-family: $fontstack-bold;
            }
            &--has-pairs:before {
                content: '.content.content--has-pairs';
            }
            &--has-thirds:before {
                content: '.content.content--has-thirds';
            }
            &--has-2col:before {
                content: '.content.content--has-2col';
            }
            &--has-3col:before {
                content: '.content.content--has-3col';
            }
            &--colorblock:before {
                content: '.content.content--colorblock';
            }
            &--full:before {
                content: '.content.content--full';
            }
            border: 4px solid #105B63;
            padding: 2px;
            .content {
                border-style: dotted;
            }
            & + .content {
                margin-top: 2px;
            }
        }

        .content__block {
            &:before {
                content: '.content__block';
                color: #BD4932;
                font-family: $fontstack-bold;
            }
            border: 4px solid #BD4932;
            padding: 2px;
            .content__block {
                border-style: dotted;
            }
            & + .content__block {
                margin-top: 2px;
            }
        }

        .content__section {
            &:before {
                content: '.content__section';
                color: #DB9E36;
                font-family: $fontstack-bold;
            }
            border: 4px solid #DB9E36;
            padding: 2px;
            .content__section {
                border-style: dotted;
            }
        }

    }
}
@include visualize-layout;
